generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum HabitStatus {
  planned
  active
  // paused
  mastered
  cancelled
}

enum HabitDayStatus {
  done
  missed
}

model Habit {
  id        String      @id @default(uuid())
  title     String
  status    HabitStatus
  totalDays Int
  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  dayLogs HabitDayLog[] @relation("HabitToLogs")
}

model HabitDayLog {
  id        String         @id @default(uuid())
  habitId   String
  date      DateTime
  status    HabitDayStatus
  createdAt DateTime       @default(now())

  habit Habit @relation("HabitToLogs", fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date]) // Чтобы не было дублей по дню
}
