generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum HabitStatus {
  planned
  active
  paused
  built
  cancelled
}

enum HabitDayStatus {
  —Åompleted
  missed
  unmarked
}

model Habit {
  id        String      @id @default(uuid())
  title     String
  status    HabitStatus
  position  Int         @default(0)
  totalDays Int
  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  dayLogs HabitDayLog[] @relation("HabitToLogs")
}

model HabitDayLog {
  id        String         @id @default(uuid())
  habitId   String
  date      DateTime
  status    HabitDayStatus
  createdAt DateTime       @default(now())

  habit Habit @relation("HabitToLogs", fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
}
